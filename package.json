{
  "name": "tsi",
  "version": "1.0.0",
  "description": "Infotition's zero-config cli for TypeScript package development.",
  "bin": {
    "tsi": "./lib/index.js"
  },
  "repository": "https://github.com/Infotition/tsi.git",
  "author": "Infotition",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "tsi": "node ./lib/index.js",
    "clean": "npx rimraf lib",
    "clean:full": "npx rimraf **/node_modules lib",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "typescript": ">=4"
  },
  "dependencies": {
    "rollup": "^2.70.1",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@infotition/eslint-config": "^2.2.0",
    "@infotition/prettier-config": "^1.0.0",
    "@types/node": "^17.0.23",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "rollup-plugin-delete": "^2.0.0",
    "typescript": "^4.6.3"
  },
  "prettier": "@infotition/prettier-config",
  "eslintConfig": {
    "extends": [
      "@infotition/eslint-config"
    ],
    "env": {
      "es2021": true
    },
    "parserOptions": {
      "project": [
        "tsconfig.json"
      ]
    },
    "ignorePatterns": [
      "*.js",
      "lib/**"
    ]
  }
}
