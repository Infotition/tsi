{
  "name": "tsi",
  "version": "1.0.0",
  "description": "Infotition's zero-config cli for TypeScript package development.",
  "type": "module",
  "bin": {
    "tsi": "./lib/index.js"
  },
  "repository": "https://github.com/Infotition/tsi.git",
  "author": "Infotition",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "tsi": "node ./lib/index.js",
    "clean": "npx rimraf lib",
    "clean:full": "npx rimraf **/node_modules lib",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "typescript": ">=4"
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@babel/parser": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "autoprefixer": "^10.4.4",
    "chalk": "^5.0.1",
    "cssnano": "^5.1.7",
    "node-sass": "^7.0.1",
    "ora": "^6.1.0",
    "postcss": "^8.4.12",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.4.3",
    "rollup": "^2.70.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sade": "^1.8.1",
    "typescript-plugin-css-modules": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0"
  },
  "devDependencies": {
    "@infotition/eslint-config": "^2.2.0",
    "@infotition/prettier-config": "^1.0.0",
    "@types/babel__core": "^7.1.19",
    "@types/node": "^17.0.23",
    "@types/postcss-import": "^14.0.0",
    "@types/postcss-preset-env": "^6.7.3",
    "@types/react": "^18.0.1",
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "prettier": "@infotition/prettier-config",
  "eslintConfig": {
    "extends": [
      "@infotition/eslint-config"
    ],
    "env": {
      "es2021": true
    },
    "parserOptions": {
      "project": [
        "tsconfig.json"
      ]
    },
    "ignorePatterns": [
      "*.js",
      "lib/**"
    ]
  }
}
