{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["es2021", "dom"],
    "declaration": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declarationDir": "types",

    "baseUrl": "src",
    "outDir": "lib",
  },
}
