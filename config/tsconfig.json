{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["es2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "types": ["node", "jest", "@testing-library/jest-dom", "@infotition/tsi/lib"],
    "jsx": "react-jsx",
    "plugins": [{"name": "typescript-plugin-css-modules"}],
  },
}
